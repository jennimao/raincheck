{
  "name": "raincheck",
  "version": "1.0",
  "description": "play rain sounds! 🌧️",

  "permissions": ["storage", "audio", "activeTab"],


  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action":{
    "default_popup": "popup.html",
    "default_title": "raincloud"
  },

  "web_accessible_resources": ["rain.mp3"], 


  "manifest_version": 2
}